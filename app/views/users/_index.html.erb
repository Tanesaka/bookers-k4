<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <!--フォロー機能-->
        <td>フォロー数表示させる</td>
        <td>フォロワー表示させる</td>


        <td>
         <% if user != current_user %>
           <div id="follow_form">
             <% if current_user.following?(@user) %>
               <p>フォロー解除を表示</p>
             <% else %>
               <p>フォローするを表示</p>
             <% end %>
           </div>
         <% end %>
        </td>
        <!--フォロー機能ここまで-->
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
